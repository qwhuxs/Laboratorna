import json
from flask import Flask, render_template, request, redirect, url_for, session, flash

app = Flask(__name__)
app.secret_key = 'your_secret_key'

# Файли для зберігання даних
ALBUMS_FILE = 'albums.json'
USERS_FILE = 'users.json'


# Завантаження альбомів із файлу
def load_albums():
    try:
        with open(ALBUMS_FILE, 'r') as file:
            return json.load(file)
    except FileNotFoundError:
        return []  # Якщо файлу немає, повертаємо порожній список


# Збереження альбомів у файл
def save_albums(albums):
    with open(ALBUMS_FILE, 'w') as file:
        json.dump(albums, file, indent=4)


# Завантаження користувачів із файлу
def load_users():
    try:
        with open(USERS_FILE, 'r') as file:
            return json.load(file)
    except FileNotFoundError:
        return {"admin": {"password": "admin123", "role": "admin"}}  # Створюємо базового користувача


# Рендеримо головну сторінку
@app.route('/')
def index():
    return render_template('index.html')


# Рендеримо сторінку "Про проект"
@app.route('/about')
def about():
    return render_template('about.html')


# Рендеримо сторінку "Історія гурту"
@app.route('/history')
def history():
